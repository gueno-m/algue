html,
body {
    width: 100%;
    height: 100vh;
    margin: 0;
    overflow: hidden;
    color: white;
}

.phone-hide {
    display: none;
}

nav {
    height: 80px;
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

nav h2 {
    margin: auto;
    color: white;
    font-family: Arial, Helvetica, sans-serif;
    margin-left: 20px;
    font-size: 1.125rem;
}

nav a {
    margin: auto;
    margin-right: 20px;
    width: auto;
}

nav img {
    width: 100px;
}

#titre {
    position absolute;
    bottom: 0;
    left: 20px;
    z-index:555;
    color: white;
    text-transform: uppercase;
    font-family: Helvetica, sans-serif;
    visibility: hidden;
    letter-spacing: 8px;
}

.video-js {
    position: relative ;
    width: 100%;
    height: 100vh;
    // z-index : -45;
}

#defaultCanvas0 {
    position: absolute;
    z-index: 1;
    top: 0;
}

@media screen and (max-width: 750px) {
    .phone-hide {
        position: absolute;
        height: 100vh;
        width: 100%;
        background-color: #000000;
        z-index: 1000;
        display: flex;
    }

    .phone-message {
        margin: auto;
        text-align center;
        width: 90%;
        font-family: Helvetica, sans-serif;
    }
}